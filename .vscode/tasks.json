{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build release"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--profile",
				"profiling"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build profiling"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Release + GALLIUM_HUD",
			"type": "shell",
			"command": "cargo run --release",
			"options": {
				"env": {
					"vblank_mode": "0",
					"__GL_SYNC_TO_VBLANK": "0",
					"RUST_LOG": "fireworks_sim=INFO",
					"GALLIUM_HUD_PERIOD": "0.25",
					"GALLIUM_HUD": "cpu;fps;N vertices submitted",
				}
			},
			"problemMatcher": []
		},
		{
			"label": "Run + Flamegraph",
			"type": "shell",
			"command": "TIMESTAMP=$(date +%Y%m%d_%H%M%S) && mkdir -p flamegraphs && cargo flamegraph --output flamegraphs/flamegraph_$TIMESTAMP.svg --bin fireworks_sim && code -r -g flamegraphs/flamegraph_$TIMESTAMP.svg",
			"options": {
				"env": {
					"vblank_mode": "0",
					"__GL_SYNC_TO_VBLANK": "0",
				},
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	]
}